{
  "name": "site-operator",
  "private": false,
  "version": "0.2.6",
  "description": "A framework-agnostic AI chat widget that acts as a copilot for host applications.",
  "type": "module",
  "author": "jostvian",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jostvian/site-operator.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/jostvian/site-operator/issues"
  },
  "homepage": "https://github.com/jostvian/site-operator#readme",
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "preview": "wireit"
  },
  "main": "./dist/site-operator.umd.js",
  "module": "./dist/site-operator.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/site-operator.es.js",
      "require": "./dist/site-operator.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "wireit": {
    "dev": {
      "command": "vite",
      "service": true
    },
    "check-types": {
      "command": "tsc --noEmit",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": []
    },
    "build": {
      "command": "vite build",
      "dependencies": [
        "check-types"
      ],
      "files": [
        "src/**/*",
        "index.html",
        "vite.config.ts"
      ],
      "output": [
        "dist/**"
      ]
    },
    "preview": {
      "command": "vite preview",
      "dependencies": [
        "build"
      ],
      "service": true
    }
  },
  "peerDependencies": {
    "@ag-ui/client": "^0.0.42",
    "@a2ui/lit": "^0.8.1"
  },
  "devDependencies": {
    "@ag-ui/client": "^0.0.42",
    "@a2ui/lit": "^0.8.1",
    "lit": "^3.3.1",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5",
    "vite-plugin-dts": "^4.5.4",
    "@lit-labs/signals": "^0.1.3",
    "@lit/context": "^1.1.4",
    "wireit": "^0.14.12"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "dependencies": {}
}